															Employee's Username
														</div>
													</div>
													<div class="col-sm-6">
														<div class="form-group">
															<input class="form-control" id="employee_username" disabled="disable" name="employee_username" type="text" value="@employeeUsername">
														</div>
													</div>
											</div>
										</div>
										<div class="row">
											<div class="col-sm-6">
													<div class="col-sm-4">
														<div class="form-group">
															Employee's Contact Number
														</div>
													</div>
													<div class="col-sm-6">
														<div class="form-group">
															<input class="form-control" id="employee_contact_no" disabled="disable" name="employee_contact_no" type="text" value="@employeeContactNo">
														</div>
													</div>
											</div>
										</div>
										<div class="row">
											<div class="col-sm-6">
													<div class="col-sm-4">
														<div class="form-group">
															Employee's IC / Passport
														</div>
													</div>
													<div class="col-sm-6">
														<div class="form-group">
															<input class="form-control" id="employee_id_no" disabled="disable" name="employee_id_no" type="text" value="@employee_id_no">
														</div>
													</div>
											</div>
										</div>
										<div class="row">
											<div class="col-sm-6">
													<div class="col-sm-4">
														<div class="form-group">
