														</div>
													</div>
													<div class="col-sm-6">
														<div class="form-group">
															<input class="form-control" id="employee_address_2" disabled="disable" name="employee_address_2" maxlength="35" placeholder="Only 35 Characters" type="text" value="@employeeAddress2">
														</div>
													</div>
											</div>
										</div>
										<div class="row">
											<div class="col-sm-6">
													<div class="col-sm-4">
														<div class="form-group">
															Employee's Address 3
														</div>
													</div>
													<div class="col-sm-6">
														<div class="form-group">
															<input class="form-control" id="employee_address_3" disabled="disable" name="employee_address_3" maxlength="35" placeholder="Only 35 Characters" type="text" value="@employeeAddress3">
														</div>
													</div>
											</div>
										</div>
										<div class="row">
											<div class="col-sm-6">
													<div class="col-sm-4">
														<div class="form-group">
															Employee's Address 4
														</div>
													</div>
													<div class="col-sm-6">
														<div class="form-group">
															<input class="form-control" id="employee_address_4" disabled="disable" name="employee_address_4" maxlength="35" placeholder="Only 35 Characters" type="text" value="@employeeAddress4">
														</div>
													</div>
											</div>
										</div>
										<div class="row">
											<div class="col-sm-6">
													<div class="col-sm-4">
														<div class="form-group">
															Employee's Role
														</div>
													</div>
													<div class="col-sm-6">
														<div class="form-group">
															<select class="form-control" id="employee_role" disabled="disable" name="employee_role" value="@employeeRole">
                                @{
  															foreach(var r in rolesResult){
  																<option value=@r.Role>@r.Role</option>
  																}
  														     }
															</select>
														</div>
													</div>
											</div>
										</div>
										<div class="row">
											<div class="col-sm-6">
													<div class="col-sm-4">
														<div class="form-group">
															Employee's Entitled Leave
														</div>
													</div>
													<div class="col-sm-6">
														<div class="form-group">
															<input class="form-control" id="employee_entitled_leave" disabled="disable" name="employee_entitled_leave" type="number" placeholder="Only Numbers are allowed" type="text" value="@employeeEntitledLeave">
														</div>
													</div>
											</div>
										</div>
										<div class="row">
