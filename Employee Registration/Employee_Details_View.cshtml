								</div>
								<div class="row" style="text-align: center">
									<div class="col-sm-12">
												<button class="btn btn-success" onclick="location.href='Employee_Search.cshtml'" type="button">Back</button>
									 </div>
								 </div>
							 </div>
						 </div>
					 </div>
				 </div>
				 <div class="row">
					  <div class="col-sm-12"></div>
				 </div>
			 </div>
		 </div>
	  </form>
	@RenderPage("../js.cshtml")
  </body>
</html>
